<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity"
    android:background="@drawable/bg">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="ART WORLD"
        android:textColor="@color/black"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Do you love art?!! Well you are in the right place! Welcome to “Art world”. The challenge is very fun and simple where you need to do these steps:
1. Think about what a powerful female body looks like to you.
2.draw what you pictured in your mind, be creative, because you are!
3.take a picture of your amazing drawing. 4.upload the picture and submit it!"
        android:textColor="@color/black"
        android:textSize="15dp" />


    <ImageView
        android:id="@+id/image_view"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_baseline_image_24"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <Button
        android:id="@+id/choose_image_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="CHOOSE IMAGE" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment:"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/edittextsubmitpage"
        />


    <Button
        android:id="@+id/sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:layout_marginTop="30dp"/>
</LinearLayout>
